<Page x:Class="listOfDishes.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:listOfDishes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Path = dishes}" Grid.Row="0" x:Name="MainListBox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock FontSize="18" FontWeight="DemiBold" Text="{Binding Path = Title}"></TextBlock>
                        <StackPanel Orientation="Horizontal">

                            <TextBlock FontSize="16" Text="Вес:"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                            <TextBlock FontSize="16" Text="{Binding Path = Weight}"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                            <TextBlock FontSize="16" Text="ККАЛ:"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                            <TextBlock FontSize="16" Text="{Binding Path = KiloCalories}"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="16" Text="Б:"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                            <TextBlock FontSize="16" Text="{Binding Path = Proteins}"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                            <TextBlock FontSize="16" Text="Ж:"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                            <TextBlock FontSize="16" Text="{Binding Path = Fats}"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                            <TextBlock FontSize="16" Text="У:"></TextBlock>
                            <TextBlock FontSize="16" Text=" "></TextBlock>
                            <TextBlock FontSize="16" Text="{Binding Path = Carbohydrates}"></TextBlock>
                        </StackPanel>

                    </StackPanel>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel HorizontalAlignment="Center" Grid.Row="1" Orientation="Horizontal">
            <Button Click="OnDelete" Width="100" Margin="10" Content="Удалить"></Button>
            <Button Click="OnCreate" Width="100" Margin="10" Content="Создать"></Button>
        </StackPanel>
    </Grid>
</Page>
